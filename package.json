{
  "name": "astronauts-records",
  "version": "1.0.0",
  "description": "simple app",
  "main": "./build/index.js",
  "scripts": {
    "dev": "MONGOLAB_URI=mongodb://localhost:27017/evidence nodemon --exec babel-node src/index.js",
    "start": "MONGOLAB_URI=mongodb://localhost:27017/evidence node ./build/index.js",
    "heroku-postbuild": "npm run build && cd client && npm install && npm run build && cd ..",
    "build": "npm run clean && npm run build-babel",
    "build-babel": "babel src --out-dir build --ignore public,spec.js",
    "clean": "rm -rf build && mkdir build",
    "test": "mocha --require babel-core/register --require babel-polyfill './src/**/*.spec.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jejdacz/evidence.git"
  },
  "author": "Marek Mego",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jejdacz/evidence/issues"
  },
  "homepage": "https://github.com/jejdacz/evidence#readme",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.1.1",
    "input-validation": "file:local_modules/input-validation",
    "mongoose": "^5.2.12"
  },
  "devDependencies": {
    "babel-register": "^6.26.0",
    "nodemon": "^1.18.4",
    "request": "^2.88.0"
  },
  "nodemonConfig": {
    "ignore": [
      "client/*"
    ]
  }
}
